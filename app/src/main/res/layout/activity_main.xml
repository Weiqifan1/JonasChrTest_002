<?xml version="1.0" encoding="utf-8"?>

<!-- -->

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="actmain_apptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actmain_apptitle" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.086"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="actmain_playsoundBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actmain_playsoundBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/actmain_apptitle"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.058"/>

    <Button
            android:text="actmain_todiskbooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actmain_todiskbooks" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/actmain_playsoundBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.051"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Find mp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actmain_recycle" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/actmain_todiskbooks"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"/>
    <Button
            android:text="dbsqlite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actmain_dbsqlite" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/actmain_recycle" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.046"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose one"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.489" app:layout_constraintVertical_bias="0.695"/>
    <Button
            android:text="Simple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/simple_list_button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/adapter_list_button"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adapter_list_button"
            app:layout_constraintStart_toEndOf="@+id/simple_list_button" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/recycle_view_button"
            app:layout_constraintTop_toTopOf="@+id/simple_list_button"/>
    <Button
            android:text="Recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycle_view_button" app:layout_constraintStart_toEndOf="@+id/adapter_list_button"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/adapter_list_button"/>
    <Button
            android:text="Database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_db_button"
            app:layout_constraintStart_toEndOf="@+id/rest_button"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rest_button"/>
    <Button
            android:text="Rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rest_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/recycler_db_button"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/simple_list_button"/>



</android.support.constraint.ConstraintLayout>

