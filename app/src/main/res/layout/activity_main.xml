<?xml version="1.0" encoding="utf-8"?>

<!-- -->

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actmain_playsoundBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.058" app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:text="Find mp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actmain_recycle"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/actmain_playsoundBtn"/>


    <Button
            android:text="Bookmarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_db_button"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/actmain_recycle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />


</android.support.constraint.ConstraintLayout>

